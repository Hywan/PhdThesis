digraph {
    graph [rankdir=LR];
    node  [style="state"];

    subgraph {
        wordX     -> sequenceX;
        sequenceX -> resultX;
    }

    subgraph {
        word     -> sequence [label=" ", texlbl="lexicale"];
        sequence -> result   [label=" ", texlbl="syntaxique"];
    }

    wordX     [shape=plaintext, label=" ", texlbl="abcdef"                                                         ];
    sequenceX [shape=plaintext, width=2.2, label=" ", texlbl="[[a $\mapsto \dots$], [bc $\mapsto \dots$], $\dots$]"];
    resultX   [shape=plaintext, label=" ", texlbl="valide/invalide"                                                ];

    word     [label=" ", texlbl="mot"                              ];
    sequence [label=" ", texlbl="séquence"                         ];
    result   [style="state,accepting", label=" ", texlbl="résultat"];
}
